<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="106dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBotonTiendaFondo"
        android:fontFamily="@font/font_boton_tienda_texto"
        android:onClick="AgregarCarrito"
        android:text="Agregar al carrito"
        android:textAllCaps="false"
        android:textColor="@color/colorBotonTiendaTexto"
        android:textSize="@dimen/sizeBotonTiendaTexto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/txtDescripcion" />

    <TextView
        android:id="@+id/txtProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/font_usuario_titulo"
        android:text="Producto"
        android:textColor="@color/colorTextoLibre"
        android:textSize="@dimen/sizeTextoTienda"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="241dp"
        android:layout_height="62dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/font_usuario_titulo"
        android:text="descripcion"
        android:textColor="@color/colorTextoLibre"
        android:textSize="@dimen/sizeTextoTienda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/font_usuario_titulo"
        android:text="precio"
        android:textColor="@color/colorPrecioTexto"
        android:textSize="@dimen/sizePrecioTexto"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProducto" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="39dp"
        android:layout_height="54dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/balongas" />

</androidx.constraintlayout.widget.ConstraintLayout>